<h1>  <p> Author description: </p> </h1> <br>


<table class="table"
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">First_name</th>
      <th scope="col">Last_name</th>
      <th scope="col">Email</th>
      <th scope="col">Age</th>
      <th scope="col">description</th>
      <th scope="col">Author City</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row"> User Numero: <%= @user.id%></th>
      <td><%= @user.first_name %></td>
      <td><%= @user.last_name %></td>
      <td><%= @user.email%></td>
      <td><%= @user.age%></td>
      <td><%= @user.description%></td>
      <td><%= link_to @user.city.name, city_path(@user.city.id), class: "button", class: "btn btn-secondary"%></td>
    </tr>
  </tbody>
</table>

